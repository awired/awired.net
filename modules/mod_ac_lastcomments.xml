<?xml version="1.0" encoding="iso-8859-1"?>
<mosinstall type="module" version="1.0.0">
	<name>Last comments by AkoComment Tweaked SE</name>
	<author>Bernard Gilly</author>
	<creationDate>Mar 2007</creationDate>
	<copyright>(C) 2007 Bernard Gilly. All rights reserved.</copyright>
	<license>GNU/GPL</license>
	<authorEmail>contact@visualclinic.fr</authorEmail>
	<authorUrl>www.visualclinic.fr</authorUrl>
	<version>1.0.2</version>
	<description>Display last comments by Akocomment Tweaked Special Edition.</description>
	<files>
		<filename module="mod_ac_lastcomments">mod_ac_lastcomments.php</filename>
	</files>
	<params>
		<param name="moduleclass_sfx" type="text" default="" label="Suffix CSS" description="A suffix to be apply at the class CSS of module (table.moduletable)." />
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="count" type="text" default="5" label="counter" description="Num item to display (default 5)" />
		<param name="show_title_item" type="radio" default="1" label="Show related title" description="Show title of related article" >
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="limittexttitle" type="text" default="30" label="Limit chars for related title" description="Limit text for title of related article (default 30)" />		
		<param name="limittextcomment" type="text" default="60" label="Limit chars for text comment" description="Limit chars for title comment + text comment (default 60)" />		
		<param name="show_title_comment" type="radio" default="1" label="Show title comment" description="Show title comment" >
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>		
		<param name="show_author_comment" type="radio" default="1" label="Show author comment" description="Show author comment" >
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="link_author_cb" type="radio" default="0" label="Link to Community Builder" description="Link author to Community Builder" >
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="show_date_comment" type="radio" default="1" label="Show date comment" description="Show date comment" >
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="thedateformat" type="text" default="%d/%m/%y %H:%M" label="Date format" description="Enter specific date format (strftime)" />		
		<param name="label4more" type="text" default="More..." label="Label for more..." description="Custom your link read more" />
		<param name="label4author" type="text" default="By" label="Label for comment author" description="Custom label for author" />		
		<param name="label4nocomment" type="text" default="No comment..." label="Label for no comment" description="Custom label for no comment" />
	</params>
</mosinstall>
